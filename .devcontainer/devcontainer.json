{
  "name": "Claude DevContainer - LLM Entreprise",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "anthropics.claude-code",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "forwardPorts": [8082],

  "postCreateCommand": "echo '✅ Dev container prêt. Configurez .env puis lancez le proxy.'",

  "postStartCommand": "cd /workspace/claude-code-proxy && /root/.local/bin/uv sync",

  "remoteEnv": {
    "ANTHROPIC_BASE_URL": "http://localhost:8082"
  },

  "containerEnv": {
    "ANTHROPIC_BASE_URL": "http://proxy:8082"
  }
}
